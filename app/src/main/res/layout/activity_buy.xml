<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.BuyActivity">

    <RelativeLayout
        android:id="@+id/rl_buy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/img_buy_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_cart"/>
        <TextView
            android:id="@+id/txt_buy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buy with Cash or Card"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_below="@id/img_buy_cart"/>
        <TextView
            android:id="@+id/txt_buy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the crypto you want to buy"
            android:layout_below="@id/txt_buy1"
            android:textSize="15sp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_bitcoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_buy">

        <TextView
            android:id="@+id/txt_btc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Bitcoin"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_btc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_btc"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_btc_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ethereum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_bitcoin">

        <TextView
            android:id="@+id/txt_eth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Ethereum"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_eth_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_eth"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_eth_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_binance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_ethereum">

        <TextView
            android:id="@+id/txt_bnb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Binance"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_bnb_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_bnb"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_bnb_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_polkadot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_binance">

        <TextView
            android:id="@+id/txt_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Polkadot"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_dot_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_dot"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_dot_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_litecoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_polkadot">

        <TextView
            android:id="@+id/txt_ltc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Litecoin"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_ltc_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_ltc"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_ltc_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_tether"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_litecoin">

        <TextView
            android:id="@+id/txt_teth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tether"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/txt_teth_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_teth"
            android:layout_marginLeft="10dp"
            android:text="price"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/img_teth_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow" />

    </RelativeLayout>




</RelativeLayout>