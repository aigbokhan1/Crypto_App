<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_buybtc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/txt_buybtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin"
            android:textStyle="bold"
            android:textSize="30sp"/>
        <ImageView
            android:id="@+id/img_buybtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_bitcoin"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_buybtc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_buybtc1"
        android:layout_centerInParent="true"
        android:layout_margin="50dp">

        <ImageView
            android:id="@+id/img_price_buybtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_dollar"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/edt_price_buybtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_price_buybtc"
            android:textSize="30sp"
            android:textColor="#014C75"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/txt_price_buybtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_buybtc2"
        android:text="1 Transaction Allowed, Verify Now"
        android:layout_centerInParent="true"/>
    <RelativeLayout
        android:id="@+id/rl_payment_mthd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_price_buybtc"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/txt_title_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"/>
        <ImageView
            android:id="@+id/img_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_payment"
            android:layout_below="@+id/txt_title_payment"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/txt_type_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit Card"
            android:layout_toRightOf="@+id/img_payment"
            android:layout_below="@+id/txt_title_payment"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/txt_amount_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$300 Limit"
            android:layout_toRightOf="@+id/img_payment"
            android:layout_below="@+id/txt_type_payment"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:id="@+id/img_btc_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:src="@drawable/ic_baseline_arrow_down" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_previewbuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview Buy"
        android:layout_below="@+id/rl_payment_mthd"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"/>

</RelativeLayout>